<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_pubspace">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30sp"
        android:text="发布车位"
        android:textColor="#FFF"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/position"
            android:layout_width="150dp"
            android:layout_height="27dp"
            android:layout_below="@+id/position"
            android:background="#e9e9e9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/TextView01"
            android:text="暂无信息"
            android:textColor="#8F8F8F"
            android:textSize="14sp" 
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/position"
            android:layout_alignBottom="@+id/position"
            android:layout_marginLeft="10dp"
            android:text=" 位置："
            android:textColor="#FFF"/>

        <EditText
            android:id="@+id/number"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:layout_below="@+id/position"
            android:layout_toRightOf="@+id/TextView02"
            android:background="#e9e9e9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:hint="请填写你的车位号"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/number"
            android:layout_alignBottom="@+id/number"
            android:layout_marginLeft="10dp"
            android:text=" 车位号码："
            android:textColor="#FFF" />

        <EditText
            android:id="@+id/price"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:background="#e9e9e9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/number"
            android:hint="每小时车位租金"
            android:inputType="number"
            android:layout_toRightOf="@+id/TextView02"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/price"
            android:layout_alignBottom="@+id/price"
            android:layout_marginLeft="10dp"
            android:text=" 车位租金："
            android:textColor="#FFF"/>
        
          <EditText
            android:id="@+id/fine"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:background="#e9e9e9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/price"
            android:hint="超出时长所缴罚金"
            android:inputType="number"
            android:layout_toRightOf="@+id/TextView02"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/fine"
            android:layout_alignBottom="@+id/fine"
            android:layout_marginLeft="10dp"
            android:text=" 超时罚金："
            android:textColor="#FFF"/>

        <EditText
            android:id="@+id/startTime"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:background="#e9e9e9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/fine"
            android:hint="车位开放起始时间"
            android:inputType="time"
            android:layout_toRightOf="@+id/TextView02"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/startTime"
            android:layout_alignBottom="@+id/startTime"
            android:layout_marginLeft="10dp"
            android:text=" 开始时间："
            android:textColor="#FFF"/>
        
        <EditText
            android:id="@+id/endTime"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:background="#e9e9e9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/startTime"
            android:hint="车位开放结束时间"
            android:inputType="time"
            android:layout_toRightOf="@+id/TextView02"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/endTime"
            android:layout_alignBottom="@+id/endTime"
            android:layout_marginLeft="10dp"
            android:text=" 结束时间："
            android:textColor="#FFF" />
        <Button
            android:id="@+id/publish"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_below="@+id/endTime"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="发布"
            android:background="#1c9cdb"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/select"
            android:layout_width="50dp"
            android:layout_height="27dp"
            android:layout_above="@+id/number"
            android:layout_toRightOf="@+id/position"
            android:background="#55BFE7"
            android:text="选取"
            android:textColorLink="#FFF"
            android:textColor="#FFF"
            android:textSize="13sp" />

    </RelativeLayout>
    </LinearLayout>
