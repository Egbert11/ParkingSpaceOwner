<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_pubspace">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30sp"
        android:text="修改车位"
        android:textColor="#FFF"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/mod_position"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:background="#e9e9e9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/TextView01"
            android:text="暂无信息"
            android:textColor="#8F8F8F"
            android:textSize="14sp" 
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/mod_position"
            android:layout_alignBottom="@+id/mod_position"
            android:layout_marginLeft="10dp"
            android:text=" 位置："
            android:textColor="#FFF"/>
        
         <Button
            android:id="@+id/mod_sharedate"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:background="#55BFE7"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/mod_position"
            android:text="选择"
            android:onClick="shareDateSelect"
            android:layout_toRightOf="@+id/TextView02"
            android:textColor="#FFF"
            android:textColorLink="#FFF" />
        
        <TextView
            android:id="@+id/TextView07"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/mod_sharedate"
            android:layout_alignBottom="@+id/mod_sharedate"
            android:layout_marginLeft="10dp"
            android:text=" 共享日期："
            android:textColor="#FFF" />

        <EditText
            android:id="@+id/mod_number"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:layout_below="@+id/mod_sharedate"
            android:layout_toRightOf="@+id/TextView02"
            android:background="#e9e9e9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:hint="请填写你的车位号"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/mod_number"
            android:layout_alignBottom="@+id/mod_number"
            android:layout_marginLeft="10dp"
            android:text=" 车位号码："
            android:textColor="#FFF" />

        <EditText
            android:id="@+id/mod_price"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:background="#e9e9e9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/mod_number"
            android:hint="每小时车位租金"
            android:inputType="number"
            android:layout_toRightOf="@+id/TextView02"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/mod_price"
            android:layout_alignBottom="@+id/mod_price"
            android:layout_marginLeft="10dp"
            android:text=" 车位租金："
            android:textColor="#FFF"/>
        
          <EditText
            android:id="@+id/mod_fine"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:background="#e9e9e9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/mod_price"
            android:hint="超出时长所缴罚金"
            android:inputType="number"
            android:layout_toRightOf="@+id/TextView02"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/mod_fine"
            android:layout_alignBottom="@+id/mod_fine"
            android:layout_marginLeft="10dp"
            android:text=" 超时罚金："
            android:textColor="#FFF"/>

        <EditText
            android:id="@+id/mod_start"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:background="#e9e9e9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/mod_fine"
            android:hint="车位开放起始时间"
            android:inputType="time"
            android:layout_toRightOf="@+id/TextView02"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/mod_start"
            android:layout_alignBottom="@+id/mod_start"
            android:layout_marginLeft="10dp"
            android:text=" 开始时间："
            android:textColor="#FFF"/>
        
        <EditText
            android:id="@+id/mod_end"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:textSize="14sp"
            android:background="#e9e9e9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/mod_start"
            android:hint="车位开放结束时间"
            android:inputType="time"
            android:layout_toRightOf="@+id/TextView02"
            android:textColor="#000"
            android:textColorLink="#FFF" />

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:textSize="17sp"
            android:gravity="center" 
            android:background="#55BFE7"
            android:layout_alignBaseline="@+id/mod_end"
            android:layout_alignBottom="@+id/mod_end"
            android:layout_marginLeft="10dp"
            android:text=" 结束时间："
            android:textColor="#FFF" />
    </RelativeLayout>
    <Button
            android:id="@+id/modify"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="修改"
            android:background="#1c9cdb"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </LinearLayout>
